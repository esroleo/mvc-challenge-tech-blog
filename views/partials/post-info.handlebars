<!-- use property names as the object is not known to post-info --> 

<article class="post border border-success">
  <div class="title container ">
    <div class="d-flex flex-row justify-content-between">
      <div class="justify-content-start"><a href="/post/{{id}}">{{title}}</a></div>
      <div class="justify-content-end"><p>Posted by {{user.username}} on {{format_date created_at}}</div>
    </div>
    
  </div>
  <div class="meta container">
    <p>{{contents}} </p>
    <!--post_url-->
  </div>
</article>
